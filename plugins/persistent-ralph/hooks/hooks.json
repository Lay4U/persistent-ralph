{
  "description": "Persistent Ralph - Auto-resume Ralph loops on ANY session start (including new sessions)",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/run-stop-hook.cmd\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/run-pre-compact.cmd\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/run-auto-resume.cmd\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "^\\s*$|^(c|continue|go|resume|start|계속|시작)\\s*$",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/run-prompt-replace.cmd\""
          }
        ]
      }
    ]
  }
}
